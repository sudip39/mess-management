<% include partials/header %>

<div class="container">
    <form action="/newitem" method="post">
        <div class="container myresponsive">
            <div class="text-center md-form">
                <h3 class="pink-text mb-5"><strong>New Item</strong></h3>
            </div>
            <div class="form-inline">
            <div class="form-group ">
                <input name="rate[common]" type="radio" value='1' id="radio11" checked="checked">
                <label for="radio11">Common</label>
            </div>
        
            <div class="form-group">
                <input name="rate[common]"  value="0" type="radio" id="radio21">
                <label for="radio21">Uncommon</label>
            </div>
          </div>
        
            <div class="md-form" >
                <i class="fa fa-shopping-basket prefix grey-text"></i>
                <input type="text" required id="orangeForm-name" name="rate[name]" class="form-control">
                <label for="orangeForm-name">Item Name</label>
            </div>
            <div class="md-form">
                <i class="fa fa-rupee-sign prefix grey-text"></i>
                <input type="text" required id="orangeForm-rate[price]" name="rate[price]" class="form-control">
                <label for="orangeForm-rate[price]">Item Rate</label>
            </div>
            <div class="md-form" >
                <i class="fa fa-balance-scale prefix grey-text" ></i>
                <input type="text" required id="orangeForm-rate[qty]" name="rate[qtype]" class="form-control">
                <label for="orangeForm-rate[qty]">Quantity Type</label>
            </div>

            <div class="md-form">
                <i class="fa fa-lock prefix grey-text"></i>
                <input type="password" required id="orangeForm-pass" name="password" class="form-control">
                <label for="orangeForm-pass">Your password</label>
            </div>
            <div class="text-center">
                <button class="btn btn-default">Submit</button>
            </div>
        </div>
    </form>
</div>
<% include partials/footer %>
